# Environment Variables for LearnerAI Backend

# Server Configuration
PORT=5000
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# External API URLs (for microservice integration)
SKILLS_ENGINE_URL=http://localhost:5001
COURSE_BUILDER_URL=http://localhost:5002
HR_SYSTEM_URL=http://localhost:5003
LEARNING_ANALYTICS_URL=http://localhost:5004
RAG_SYSTEM_URL=http://localhost:5005

# AI Service Configuration
AI_SERVICE_URL=http://localhost:5006
AI_API_KEY=your_ai_service_api_key

# JWT Configuration (for production)
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRE=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Connection Pool
DB_POOL_SIZE=10
DB_POOL_TIMEOUT=30000
